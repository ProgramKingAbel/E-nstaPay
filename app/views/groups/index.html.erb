<h1>Groups</h1>

<% if @groups.any? %>
  <ul>
    <% @groups.each do |group| %>
      <li>
        <%= link_to group.name, group %>
        Icon: <%= image_tag group.icon.url %>
        Total Amount: <%= @group.payments.sum(:amount) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No groups have been created yet. Please <%= link_to 'create a new group', new_group_path %> to get started.</p>
<% end %>

